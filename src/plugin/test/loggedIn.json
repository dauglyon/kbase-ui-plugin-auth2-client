[
    {
        "description": "Logged in already",
        "disable": {
            "envs": ["appdev"]
        },
        "specs": [
            {
                "description": "Login widget should show username",

                "baseSelector": [
                    {
                        "type": "widget",
                        "value": "auth2_signin"
                    }
                ],
                "tasks": [
                    {
                        "title": "Orient ...",
                        "selector": [],
                        "wait": 30000
                    },
                    {
                        "title": "Should see signin button",
                        "selector": [
                            {
                                "type": "button",
                                "value": "signin"
                            }
                        ],
                        "exists": true
                    },
                    {
                        "title": "Set kbase session cookie (simulate login)",
                        "selector": [],
                        "action": "set-session-cookie",
                        "params": {
                            "name": "kbase_session",
                            "path": "/",
                            "value": "$token"
                        }
                    },
                    {
                        "title": "Ensure the logged-in menu appears, then open the user menu",
                        "selector": [
                            {
                                "type": "menu",
                                "value": "signed-in"
                            },
                            {
                                "type": "button",
                                "value": "avatar"
                            }
                        ],
                        "wait": 10000,
                        "action": "click"
                    },
                    {
                        "title": "Username should be now rendered",
                        "selector": [
                            [
                                {
                                    "type": "label",
                                    "value": "username"
                                }
                            ]
                        ],
                        "waitForText": 10000,
                        "text": "$username"
                    },
                    {
                        "title": "And the real name too",
                        "selector": [
                            [
                                {
                                    "type": "label",
                                    "value": "realname"
                                }
                            ]
                        ],
                        "exists": true,
                        "text": "$realname"
                    }
                ]
            }
        ]
    }
]
