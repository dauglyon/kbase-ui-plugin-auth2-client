[
    {
        "description": "Signin spec",
        "disable": {
            "envs": ["appdev"]
        },
        "specs": [
            {
                "description": "Click the signin button",
                "baseSelector": [],
                "tasks": [
                    {
                        "title": "navigate to login",
                        "navigate": {
                            "path": "login"
                        }
                    },
                    {
                        "switchToFrame": {
                            "selector": [
                                {
                                    "type": "iframe",
                                    "value": "plugin-iframe"
                                }
                            ],
                            "wait": 1000
                        }
                    },
                    {
                        "selector": [
                            {
                                "type": "component",
                                "value": "login-view"
                            },
                            {
                                "type": "button",
                                "value": "signin"
                            }
                        ],
                        "wait": 30000,
                        "action": "click"
                    },
                    {
                        "selector": [
                            {
                                "type": "component",
                                "value": "login-view"
                            },
                            [
                                {
                                    "type": "component",
                                    "value": "signin-button"
                                },
                                {
                                    "type": "name",
                                    "value": "google"
                                }
                            ]
                        ],
                        "wait": 3000
                    },
                    {
                        "selector": [
                            {
                                "type": "component",
                                "value": "login-view"
                            },
                            [
                                {
                                    "type": "component",
                                    "value": "signin-button"
                                },
                                {
                                    "type": "name",
                                    "value": "globus"
                                }
                            ]
                        ],
                        "exists": true
                    }
                ]
            }
        ]
    }
]
